{
    "$schema": "https://vega.github.io/schema/vega/v5.json",
    "description": "Area charts with an interactive overview and filtered detail views.",
    "width": 720,
    "height": 540,
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
  
    "data": [
      {
        "name": "chartData",
        "values": [
          
        ]
      }
    ],
  
    "signals": [
      {
        "name": "detailDomain"
      },
      {
        "name": "graphSize",
        "value": [540,720]
      },
      {
        "name": "xAxis",
        "value": ""
      },
      {
        "name": "yAxis",
        "value": ""
      },
      {
        "name": "colors",
        "value": []
      },
      {
        "name": "brush",
        "value" : 0
      }
    ],
  
    "marks": [
      {
        "type": "group",
        "name": "detail",
        "encode": {
          "enter": {
            "height": {"signal": "graphSize[0]*0.64"},
            "width": {"signal": "graphSize[1]"}
          }
        },
        "scales": [
          {
            "name": "xDetail",
            "type": "linear",
            "range": [0,{"signal": "graphSize[1]"}],
            "domain": {"data": "chartData", "field": {"signal": "xAxis"}},
            "domainRaw": {"signal": "detailDomain"}
          },
          {
            "name": "yDetail",
            "type": "linear",
            "range": [{"signal": "graphSize[0]*0.64"}, 0],
            "domain": {"data": "chartData", "field": {"signal": "yAxis"}},
            "nice": true, "zero": true
          },
          {
            "name": "color",
            "type": "ordinal",
            "range": {"signal": "colors"},
            "domain": {"data": "chartData", "field": "c"}
          }
        ],
        "axes": [
          {"orient": "bottom", "scale": "xDetail"},
          {"orient": "left", "scale": "yDetail"}
        ],
        "legends": [
          {
            "fill": "color",
            "title": "Category",
            "orient": "top-right"
          }
        ],
        "marks": [
          {
            "type": "group",
            "from": {
              "facet": {
                "name": "series",
                "data": "chartData",
                "groupby": "c"
              }
            },
            "encode": {
              "enter": {
                "height": {"signal": "graphSize[0]"},
                "width": {"signal": "graphSize[1]"},
                "clip": {"value": true}
              }
            },
            "marks": [
              {
                "type": "line",
                "from": {"data": "series"},
                "encode": {
                  "update": {
                    "interpolate": {"value": "cardinal"},
                    "x": {"scale": "xDetail", "field": {"signal": "xAxis"}},
                    "y": {"scale": "yDetail", "field": {"signal": "yAxis"}},
                    "stroke": {"scale": "color", "field": "c"},
                    "strokeWidth": {"value": 2}
                  }
                }
              }
            ]
          }
        ]
      },
  
      {
        "type": "group",
        "name": "overview",
        "encode": {
          "enter": {
            "x": {"value": 0},
            "y": {"signal": "graphSize[0]*0.64 + graphSize[0]*0.1"},
            "height": {"signal": "graphSize[0]*(0.36/2)"},
            "width": {"signal": "graphSize[1]"},
            "fill": {"value": "transparent"}
          }
        },
        "signals": [
          {
            "name": "brush",
            "push": "outer",
            "on": [
              {
                "events": "@overview:mousedown",
                "update": "[x(), x()]"
              },
              {
                "events": "[@overview:mousedown, window:mouseup] > window:mousemove!",
                "update": "[brush[0], clamp(x(), 0, graphSize[1])]"
              }
            ]
          },
          {
            "name": "detailDomain",
            "push": "outer",
            "on": [
              {
                "events": {"signal": "brush"},
                "update": "span(brush) ? invert('xOverview', brush) : null"
              }
            ]
          }
        ],
        "scales": [
          {
            "name": "xOverview",
            "type": "linear",
            "range": [0,{"signal": "graphSize[1]"}],
            "domain": {"data": "chartData", "field": {"signal": "xAxis"}}
          },
          {
            "name": "yOverview",
            "type": "linear",
            "range": [{"signal": "graphSize[0]*(0.36/2)"}, 0],
            "domain": {"data": "chartData", "field": {"signal": "yAxis"}},
            "nice": true, "zero": true
          },{
            "name": "color",
            "type": "ordinal",
            "range": {"signal": "colors"},
            "domain": {"data": "chartData", "field": "c"}
          }
        ],
        "axes": [
          {"orient": "bottom", "scale": "xOverview"}
        ],
        "marks": [
          {
            "type": "group",
            "from": {
              "facet": {"name": "seriesOverview",
                "data": "chartData",
                "groupby": "c"
              }
            },
            "marks": [
              {
                "type": "line",
                "from": {"data": "seriesOverview"},
                "encode": {
                  "update": {
                    "interpolate": {"value": "cardinal"},
                    "x": {"scale": "xOverview", "field": {"signal": "xAxis"}},
                    "y": {"scale": "yOverview", "field": {"signal": "yAxis"}},
                    "stroke": {"scale": "color", "field": "c"},
                    "strokeWidth": {"value": 2}
                  }
                }
              }
            ]
          },
          {
            "type": "rect",
            "name": "brush",
            "encode": {
              "enter": {
                "y": {"value": 0},
                "height": {"signal": "graphSize[0]*(0.36/2)"},
                "fill": {"value": "#333"},
                "fillOpacity": {"value": 0.2}
              },
              "update": {
                "x": {"signal": "brush[0]"},
                "x2": {"signal": "brush[1]"}
              }
            }
          },
          {
            "type": "rect",
            "interactive": false,
            "encode": {
              "enter": {
                "y": {"value": 0},
                "height": {"signal": "graphSize[0]*(0.36/2)"},
                "width": {"value": 1},
                "fill": {"value": "firebrick"}
              },
              "update": {
                "x": {"signal": "brush[0]"}
              }
            }
          },
          {
            "type": "rect",
            "interactive": false,
            "encode": {
              "enter": {
                "y": {"value": 0},
                "height": {"signal": "graphSize[0]*(0.36/2)"},
                "width": {"value": 1},
                "fill": {"value": "firebrick"}
              },
              "update": {
                "x": {"signal": "brush[1]"}
              }
            }
          }
        ]
      }
    ]
  
  }